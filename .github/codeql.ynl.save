name: "CodeQL"

on:
  # Roda em pushes para a branch 'main'
  push:
    branches: [ "main" ]
  # Roda em Pull Requests para a branch 'main'
  pull_request:
    branches: [ "main" ]
  # Roda também uma vez por semana (opcional)
  schedule:
    - cron: '30 13 * * 4' # Quinta-feira às 13:30 UTC

jobs:
  analyze:
    name: Analyze
    # Usamos a última versão do Ubuntu
    runs-on: ubuntu-latest

    # Permissões necessárias para o CodeQL
    permissions:
      actions: read
      contents: read
      security-events: write

    strategy:
      fail-fast: false
      matrix:
        # Especificamos 'javascript' porque seu projeto é React
        language: [ 'javascript' ] 

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    # Inicializa o CodeQL
    - name: Initialize CodeQL
      uses: github/codeql-action/init@v3
      with:
        languages: ${{ matrix.language }}

    # Roda o autobuild (que detecta seu build npm)
    - name: Autobuild
      uses: github/codeql-action/autobuild@v3

    # Roda a análise do CodeQL
    - name: Perform CodeQL Analysis
      uses: github/codeql-action/analyze@v3

